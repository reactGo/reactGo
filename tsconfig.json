{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "typeRoots": ["./types"]
  },
  "exclude": [
    "node_modules",
    "compiled",
    "public",
    "**/*.js"
  ]
}
